# Database Configuration
# Create a .env file with your Azure PostgreSQL connection details

# Azure PostgreSQL connection settings
DB_HOST=your-postgres-server.postgres.database.azure.com
DB_PORT=5432
DB_NAME=playwright_test_results
DB_USER=your-username@your-postgres-server
DB_PASSWORD=your-password
DB_SSL=true

# Optional: For connection pooling
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000

# Organization and Application IDs (defaults to '1' if not set)
ORG_ID=1
APP_ID=1

# Test environment settings
TEST_ENVIRONMENT=development
PLAYWRIGHT_REPORT_DIR=./playwright-report

# Zoho CRM Test Credentials
ZOHO_EMAIL=your-zoho-email@example.com
ZOHO_PASSWORD=your-zoho-password